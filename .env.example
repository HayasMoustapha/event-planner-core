# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_core
DB_USER=postgres
DB_PASSWORD=postgres

# Database Bootstrap - Enable automatic database creation and migrations
DB_AUTO_BOOTSTRAP=true

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3000
AUTH_SERVICE_TOKEN=your_auth_service_token

# JWT Configuration (for token validation)
JWT_SECRET=your_jwt_secret_for_validation

# Notification Service Configuration
NOTIFICATION_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_API_KEY=your_notification_service_api_key

# Payment Service Configuration
PAYMENT_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_API_KEY=your_payment_service_api_key

# Ticket Generator Service Configuration
TICKET_GENERATOR_URL=http://localhost:3004
TICKET_GENERATOR_API_KEY=your_ticket_generator_api_key

# Scan Validation Service Configuration
SCAN_SERVICE_URL=http://localhost:3005
SCAN_SERVICE_API_KEY=your_scan_service_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Service Health Checks
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=10000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
