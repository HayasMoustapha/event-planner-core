{
  "info": {
    "name": "Event Planner Core API",
    "description": "API collection for Event Planner Core service with centralized security and validation",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Admin Module",
      "item": [
        {
          "name": "Get System Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "stats"]
            },
            "description": "Get system statistics (requires admin.stats.read permission)"
          },
          "response": []
        },
        {
          "name": "Get Users List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/users?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                }
              ]
            },
            "description": "Get users list with pagination (requires admin.users.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Events Module",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tech Conference 2024\",\n  \"description\": \"Annual technology conference\",\n  \"startDate\": \"2024-06-15T09:00:00Z\",\n  \"endDate\": \"2024-06-15T18:00:00Z\",\n  \"location\": \"Paris, France\",\n  \"maxAttendees\": 500,\n  \"ticketTypes\": [\n    {\n      \"name\": \"Standard\",\n      \"price\": 99.99,\n      \"quantity\": 300\n    },\n    {\n      \"name\": \"VIP\",\n      \"price\": 199.99,\n      \"quantity\": 100\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/events",
              "host": ["{{base_url}}"],
              "path": ["api", "events"]
            },
            "description": "Create a new event (requires events.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Events List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/events?page=1&limit=20&status=active",
              "host": ["{{base_url}}"],
              "path": ["api", "events"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                },
                {
                  "key": "status",
                  "value": "active",
                  "description": "Event status filter"
                }
              ]
            },
            "description": "Get events list with filters (requires events.read permission)"
          },
          "response": []
        },
        {
          "name": "Get Event Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "{{event_id}}"]
            },
            "description": "Get event details by ID (requires events.read permission)"
          },
          "response": []
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Tech Conference 2024\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "{{event_id}}"]
            },
            "description": "Update event details (requires events.update permission)"
          },
          "response": []
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "{{event_id}}"]
            },
            "description": "Delete an event (requires events.delete permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Guests Module",
      "item": [
        {
          "name": "Register Guest",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{event_id}}\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+33612345678\",\n  \"ticketTypeId\": \"{{ticket_type_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/guests/register",
              "host": ["{{base_url}}"],
              "path": ["api", "guests", "register"]
            },
            "description": "Register a guest for an event (requires guests.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Event Guests",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/guests/event/{{event_id}}?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "guests", "event", "{{event_id}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                }
              ]
            },
            "description": "Get guests for a specific event (requires guests.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Marketplace Module",
      "item": [
        {
          "name": "Create Listing",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{event_id}}\",\n  \"title\": \"Premium Workshop\",\n  \"description\": \"Advanced workshop for professionals\",\n  \"price\": 49.99,\n  \"quantity\": 50,\n  \"category\": \"workshop\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/marketplace/listings",
              "host": ["{{base_url}}"],
              "path": ["api", "marketplace", "listings"]
            },
            "description": "Create a marketplace listing (requires marketplace.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Marketplace Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/marketplace/listings?eventId={{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "marketplace", "listings"],
              "query": [
                {
                  "key": "eventId",
                  "value": "{{event_id}}",
                  "description": "Filter by event ID"
                }
              ]
            },
            "description": "Get marketplace listings (requires marketplace.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tickets Module",
      "item": [
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{event_id}}\",\n  \"ticketTypeId\": \"{{ticket_type_id}}\",\n  \"guestId\": \"{{guest_id}}\",\n  \"price\": 99.99\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets"]
            },
            "description": "Create a ticket (requires tickets.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Event Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/event/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "event", "{{event_id}}"]
            },
            "description": "Get tickets for an event (requires tickets.read permission)"
          },
          "response": []
        },
        {
          "name": "Validate Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": \"{{ticket_id}}\",\n  \"validationCode\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/validate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "validate"]
            },
            "description": "Validate a ticket (requires tickets.validate permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Basic health check (no authentication required)"
          },
          "response": []
        },
        {
          "name": "API Documentation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api",
              "host": ["{{base_url}}"],
              "path": ["api"]
            },
            "description": "API documentation (no authentication required)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-refresh token if expired (example)",
          "if (pm.collectionVariables.get('auth_token') === 'your_jwt_token_here') {",
          "    pm.collectionVariables.set('auth_token', 'your_real_jwt_token');",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
