{
  "name": "event-planner-core",
  "version": "1.0.0",
  "description": "Event Planner Core API - Business logic and orchestration service",
  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:schema": "NODE_ENV=test jest --config jest.schema.config.js",
    "test:schema:watch": "NODE_ENV=test jest --config jest.schema.config.js --watch",
    "test:schema:coverage": "NODE_ENV=test jest --config jest.schema.config.js --coverage",
    "test:unit": "NODE_ENV=test jest tests/unit/",
    "test:integration": "NODE_ENV=test jest tests/integration/",
    "test:all": "npm run test:schema && npm run test:unit && npm run test:integration",
    "test:orchestration": "NODE_ENV=test jest --config tests/orchestration/jest.orchestration.config.js",
    "test:orchestration:mock": "NODE_ENV=test ORCHESTRATION_TEST_MODE=mock jest --config tests/orchestration/jest.orchestration.config.js",
    "test:orchestration:integration": "NODE_ENV=test ORCHESTRATION_TEST_MODE=integration jest --config tests/orchestration/jest.orchestration.config.js",
    "test:orchestration:e2e": "NODE_ENV=test ORCHESTRATION_TEST_MODE=e2e jest --config tests/orchestration/jest.orchestration.config.js"
  },
  "keywords": [
    "event-planner",
    "nodejs",
    "express",
    "backend",
    "api",
    "saas"
  ],
  "author": "Hassid Belkassim",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "adm-zip": "^0.5.10",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-notifier": "^10.0.1",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "puppeteer": "^23.11.1",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@faker-js/faker": "^8.4.1",
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
